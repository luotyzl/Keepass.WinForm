<Window x:Class="Keepass.Wpf.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Keepass.Wpf.Converters"
        mc:Ignorable="d"
        Title="KeeZ - Login" Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="KeeZ Password Manager" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Database File Display -->
        <TextBlock Grid.Row="1" Text="Database File:" 
                   FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="2" 
                   Text="{Binding DatabaseFileDisplay}" 
                   Foreground="Gray" Margin="0,0,0,20"/>

        <!-- Password Input -->
        <TextBlock Grid.Row="3" Text="Master Password:" 
                   FontWeight="Bold" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="4" Name="PasswordBox" 
                     Height="30" Margin="0,0,0,15"
                     PasswordChanged="PasswordBox_PasswordChanged"
                     KeyDown="PasswordBox_KeyDown"/>

        <!-- Error Message -->
        <TextBlock Grid.Row="5" 
                   Text="{Binding ErrorMessage}"
                   Foreground="Red" TextWrapping="Wrap" 
                   Visibility="{Binding IsErrorVisible, Converter={StaticResource BooleanToVisibilityConverter}}" 
                   Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Settings" 
                    Width="80" Height="30" Margin="0,0,10,0"
                    Command="{Binding SettingsCommand}"/>
            <Button Content="Login" 
                    Width="80" Height="30" IsDefault="True"
                    Command="{Binding LoginCommand}"/>
        </StackPanel>
    </Grid>
</Window>