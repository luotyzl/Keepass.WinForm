<Window x:Class="Keepass.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keepass.Wpf"
        mc:Ignorable="d"
        Title="KeePass" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        DataContextChanged="MainWindow_DataContextChanged"
        StateChanged="MainWindow_StateChanged"
        Closing="MainWindow_Closing"
        Background="#1e1e1e">
    <Window.Resources>
        <!-- TreeView Item Style -->
        <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="#f7f7f7"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#403f40"/>
                    <Setter Property="Foreground" Value="#f7f7f7"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2d2d2e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListView Item Style -->
        <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Foreground" Value="#f7f7f7"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2463c8"/>
                    <Setter Property="Foreground" Value="#f7f7f7"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2d2d2e"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="400" MinWidth="300"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Groups/Menu -->
        <Border Grid.Column="0"
                Background="#2d2d2e"
                BorderBrush="#444445"
                BorderThickness="0,0,1,0">
            <TreeView ItemsSource="{Binding Groups}"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#f7f7f7"
                      Padding="10"
                      ItemContainerStyle="{StaticResource TreeViewItemStyle}"
                      SelectedItemChanged="TreeView_SelectedItemChanged">
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource TreeViewItemStyle}">
                        <Setter Property="IsExpanded" Value="True"/>
                    </Style>
                </TreeView.Resources>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}"
                                   Padding="4,2"
                                   FontSize="13"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Border>

        <!-- Splitter 1 -->
        <GridSplitter Grid.Column="1"
                      Width="1"
                      Background="#444445"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"/>

        <!-- Center Panel: Search + Entries List -->
        <Grid Grid.Column="2" Background="#1e1e1e">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <Border Grid.Row="0"
                    Background="#2d2d2e"
                    BorderBrush="#444445"
                    BorderThickness="0,0,0,1"
                    Padding="15,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="#1e1e1e"
                            BorderBrush="#444445"
                            BorderThickness="1"
                            CornerRadius="3"
                            Padding="8,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="&#xE721;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="14"
                                      Foreground="#b7b7b8"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#f7f7f7"
                                    FontSize="13"
                                    VerticalAlignment="Center"
                                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                 Focusable="False"
                                                                 HorizontalScrollBarVisibility="Hidden"
                                                                 VerticalScrollBarVisibility="Hidden"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <Button Grid.Column="1"
                            Width="36" Height="36"
                            Background="#317ef6"
                            BorderThickness="0"
                            Margin="10,0,0,0"
                            Cursor="Hand"
                            Command="{Binding AddEntryCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="&#xE710;"
                                  FontFamily="Segoe MDL2 Assets"
                                  FontSize="16"
                                  Foreground="White"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Entries List -->
            <ListView Grid.Row="1"
                      ItemsSource="{Binding Entries}"
                      SelectedItem="{Binding SelectedEntry}"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#f7f7f7"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ItemContainerStyle="{StaticResource ListViewItemStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                  Width="20" Height="20"
                                  Source="{Binding IconSource}"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Name}"
                                          FontSize="14"
                                          FontWeight="Medium"
                                          Foreground="#f7f7f7"/>
                                <TextBlock Text="{Binding Username}"
                                          FontSize="12"
                                          Foreground="#b7b7b8"
                                          Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Splitter 2 -->
        <GridSplitter Grid.Column="3"
                      Width="1"
                      Background="#444445"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"/>

        <!-- Right Panel: Entry Details -->
        <Border Grid.Column="4" Background="#1e1e1e">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Entry Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                        <Image Width="40" Height="40"
                               Source="{Binding SelectedEntry.IconSource}"
                               Margin="0,0,15,0"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedEntry.Name}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#f7f7f7"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Username Field -->
                    <TextBlock Text="Username"
                               FontSize="12"
                               Foreground="#b7b7b8"
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedEntry.Username}"
                                 IsReadOnly="True"
                                 Background="#2d2d2e"
                                 Foreground="#f7f7f7"
                                 BorderBrush="#444445"
                                 BorderThickness="1"
                                 Padding="12,10"
                                 FontSize="14"/>
                        <Button Grid.Column="1"
                                Width="40" Height="40"
                                Background="#2d2d2e"
                                BorderBrush="#444445"
                                BorderThickness="1,1,1,1"
                                Margin="0,0,0,0"
                                Cursor="Hand"
                                Command="{Binding CopyUsernameCommand}">
                            <TextBlock Text="&#xE8C8;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="16"
                                      Foreground="#b7b7b8"/>
                        </Button>
                    </Grid>

                    <!-- Password Field -->
                    <TextBlock Text="Password"
                               FontSize="12"
                               Foreground="#b7b7b8"
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox Grid.Column="0"
                                    Name="EntryPasswordBox"
                                    Background="#2d2d2e"
                                    Foreground="#f7f7f7"
                                    BorderBrush="#444445"
                                    BorderThickness="1"
                                    Padding="12,10"
                                    FontSize="14"
                                    PasswordChanged="PasswordBox_PasswordChanged"/>
                        <Button Grid.Column="1"
                                Width="40" Height="40"
                                Background="#2d2d2e"
                                BorderBrush="#444445"
                                BorderThickness="1,1,1,1"
                                Margin="0,0,0,0"
                                Cursor="Hand"
                                Command="{Binding CopyPasswordCommand}">
                            <TextBlock Text="&#xE8C8;"
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="16"
                                      Foreground="#b7b7b8"/>
                        </Button>
                    </Grid>

                    <!-- URL Field -->
                    <TextBlock Text="Website"
                               FontSize="12"
                               Foreground="#b7b7b8"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding SelectedEntry.Url}"
                             IsReadOnly="True"
                             Background="#2d2d2e"
                             Foreground="#f7f7f7"
                             BorderBrush="#444445"
                             BorderThickness="1"
                             Padding="12,10"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                    <!-- Notes Field -->
                    <TextBlock Text="Notes"
                               FontSize="12"
                               Foreground="#b7b7b8"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding SelectedEntry.Notes}"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Background="#2d2d2e"
                             Foreground="#f7f7f7"
                             BorderBrush="#444445"
                             BorderThickness="1"
                             Padding="12,10"
                             FontSize="14"
                             MinHeight="100"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
